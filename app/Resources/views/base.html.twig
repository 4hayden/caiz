<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome to Acme Optronics!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block topmenu %}
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                {#collapsebtn#}
                <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse" data-target="#collapsemenu"
                        aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {#logo#}
                <a href="{{ path('homepage') }}" class="pull-left">
                    <img class="logo" src="{{ asset('images/logo.png') }}" alt="ACME"/>
                </a>
            </div>
            {#menu#}
            <div class="collapse navbar-collapse" id="collapsemenu">
                {{ knp_menu_render('main_menu', { 'currentClass' : 'active'} ) }}
                {#<ul class="nav navbar-nav navbar-left">#}
                    {#<li class="{% if app.request.attributes.get('_route')=='category_list' %}active{% endif %}">#}
                        {#<a href=" {{ path('category_list') }}">SOLUTIONS</a>#}
                    {#</li>#}
                    {#<li class="{% if app.request.attributes.get('_route')=='product_list' %}active{% endif %}">#}
                        {#<a href="{{ path('product_list') }}">PRODUCTS</a>#}
                    {#</li>#}
                    {#<li>#}
                        {#<a href="#" class="dropdown-toggle" data-toggle="dropdown"#}
                           {#role="button" aria-haspopup="true" aria-expanded="false">WHERE TO BUY <span#}
                                    {#class="caret"></span></a>#}
                        {#<ul class="dropdown-menu">#}
                            {#<li><a href="#">Action</a></li>#}
                            {#<li><a href="#">Another action</a></li>#}
                        {#</ul>#}
                    {#</li>#}
                    {#<li><a href="#">MEDIA</a></li>#}
                    {#<li><a href="#">CONTACT</a></li>#}
                {#</ul>#}
                {#user#}
                <span class="navbar-text">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                        <a href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    {% else %}
                        <span class="glyphicon glyphicon-user"></span>
                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    {% endif %}
                </span>
                {#search#}
                <form class="navbar-form navbar-right" role="search">
                    <div class="form-group form-group-sm">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search">
                            <span class="input-group-btn"><button type="submit" class="btn btn-sm btn-default">Go
                                </button></span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        {#display flash message on top if any#}
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}
    </nav>
{% endblock %}

{% block content %}{% endblock %}

{% block footer %}
    <footer class="modal-footer">
        <p class="small">101 Honeysuckle Lane, Acme, Washington 98220, US</p>

        <p class="small">&copy; Copyright 2016 <b>Acme Optronics Corp.</b> All Rights Reserved</p>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery-1.11.3.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/scripts.js') }}" type="text/javascript"></script>
{% endblock %}
</body>
</html>
