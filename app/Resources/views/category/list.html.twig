{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Actions</th>
                <th>Associate Products</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.title }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('category_show', { 'id': category.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
                <td>
                    {% for product in category.products %}
                        <ul>
                            <li>
                                <a href="{{ path('product_show', { 'slug': product.slug }) }}">{{ product.name }}</a>
                            </li>
                        </ul>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
